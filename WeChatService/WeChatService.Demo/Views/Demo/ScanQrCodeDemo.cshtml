@{
    ViewBag.Title = "ScanQRCode";
    Layout = "~/Views/Shared/_EmptyLayout.cshtml";
}
@Scripts.Render("~/bundles/ScanQrCode")

<p class="text-center" data-bind="visible:!viewModel.PageReady">Loading...</p>
<div data-bind="visible:viewModel.PageReady">
    <a class="btn btn-success col-xs-12" data-bind="click:viewModel.Scan" href="#">点击测试</a>
    <div class="text-center" style="padding-top: 30px; padding-bottom: 30px">
        <img src="/Content/Images/logo.png">
    </div>
    <h1 class=" font-alt text-center">Mango-E Studio</h1>
    <p class="text-center hs-line-6">@Html.Raw("Let's Marketing @ Next Great Online Easy")</p>
</div>
<div class="modal fade" id="resultmodal">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title">扫描结果</h4>
            </div>
            <div class="modal-body">
                <p class="text-center" style="word-break:break-all; word-wrap:break-word;" data-bind="text:viewModel.Result"></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->